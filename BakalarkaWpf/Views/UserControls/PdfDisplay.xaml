<UserControl x:Class="BakalarkaWpf.Views.UserControls.PdfDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:BakalarkaWpf.Views.UserControls"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             xmlns:PdfViewer="clr-namespace:Syncfusion.Windows.PdfViewer;assembly=Syncfusion.PdfViewer.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="800"
             Loaded="UserControl_Loaded">
    <!-- Base font size for the control -->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- TOP TOOLBAR -->
        <Border Grid.Row="0" BorderBrush="Black" BorderThickness="0 0 0 2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <syncfusion:ButtonAdv 
                    Grid.Column="0"
                    Width="180"  
                    Height="60"
                    Label="Zpět"
                    FontSize="20"
                    FontWeight="Bold"
                    Name="BackButton"
                    SmallIcon="{x:Null}" 
                    Click="BackButton_Click"
                    HorizontalAlignment="Left"
                    Margin="20" />
                    <syncfusion:ButtonAdv 
                    Grid.Column="1"
                    Width="180"
                        Height="60"
                        
                        FontSize="20"
                        FontWeight="Bold"
                    Label="Vyhledávání"
                    SmallIcon="{x:Null}" 
                    Name="SearchButton"
                    Click="SearchButton_Click"
                    HorizontalAlignment="Right"
                    Margin="20" />
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="300"/>
                <!-- Wider side panel -->
            </Grid.ColumnDefinitions>

            <!-- PDF VIEWER AREA -->
            <Grid Name="CenterSegment" Grid.Column="0">
                <PdfViewer:PdfViewerControl
                    Name="PDFView"
                    DocumentLoaded="PDFView_DocumentLoaded"
                    ShowHorizontalScrollBar="False"
                    ScrollChanged="PDFView_ScrollChanged"
                    ZoomMode="FitWidth"
                    ZoomChanged="PDFView_ZoomChanged"/>
            </Grid>

            <!-- OCR PANEL -->
            <Grid Grid.Column="1">
                <Border BorderThickness="2 0 0 0" BorderBrush="Black">
                    <StackPanel Margin="10">
                        <syncfusion:ButtonAdv
                            Width="200" 
                            Height="60"
                            Margin="10"
                            SmallIcon="{x:Null}"
                            Label="OCR"
                            FontSize="20"
                            Name="OcrButton"
                            Click="OcrButton_Click"/>
                            <StackPanel Name="OcrOutput" 
                                   
                                Margin="10"/>
                            </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- SEARCH PANEL -->
        <Border x:Name="SearchPanel"
                Visibility="Collapsed"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Background="White"
                BorderBrush="Gray"
                BorderThickness="1"
                Margin="0,30"
                Padding="20"
                CornerRadius="5"
                Panel.ZIndex="1"
                Grid.RowSpan="2">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Opacity="0.2"/>
            </Border.Effect>
            <StackPanel>
                <TextBox x:Name="SearchTextBox" 
                         Width="500" 
                         Height="40"
                         Margin="0,0,0,15"
                         FontSize="24"
                    Padding="5"/>
                    <StackPanel Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                        <syncfusion:ButtonAdv
                        Label="Hledat"
                        Width="120" 
                            Height="40"
                        Margin="0,0,15,0"
                        FontSize="24"
                        Click="ExecuteSearch_Click"/>
                            <syncfusion:ButtonAdv
                        Label="Další"
                        Width="120"
                        Height="40"
                        Margin="0,0,15,0"
                        FontSize="24"
                        Click="NextResult_Click"/>
                            <syncfusion:ButtonAdv
                        Label="Minulý"
                        Width="120"
                        Height="40"
                        Margin="0,0,15,0"
                        FontSize="24"
                        Click="PreviousSearchPanel_Click"/>
                            <syncfusion:ButtonAdv
                        Label="Zavřít"
                        Width="120"
                        Height="40"
                        FontSize="24"
                        Click="CloseSearchPanel_Click"/>
                    </StackPanel>
                    <TextBlock x:Name="ResultCounter"
                           Margin="0,15,0,0"
                           FontSize="24" 
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>