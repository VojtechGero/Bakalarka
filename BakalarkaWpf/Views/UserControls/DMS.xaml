<UserControl xmlns:syncfusion="http://schemas.syncfusion.com/wpf"  x:Class="BakalarkaWpf.Views.UserControls.DMS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BakalarkaWpf.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border  Grid.Row="0" BorderBrush="Black" BorderThickness="0 0 0 2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <syncfusion:ButtonAdv 
                    Grid.Column="0"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Left"
                    Margin="20"
                    />
                <syncfusion:ButtonAdv 
                    Grid.Column="1"
                    Width="150"
                    Height="50"
                    HorizontalAlignment="Right"
                    Margin="20"
                    />
            </Grid>
        </Border>
        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      Grid.Row="1">
            <StackPanel Name="FilesPanel">
                
            </StackPanel>
            
        </ScrollViewer>
    </Grid>
</UserControl>
