<Window x:Class="BakalarkaWpf.Views.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BakalarkaWpf.Views"
        mc:Ignorable="d"
        Title="InputDialog" Height="450" Width="800">

    <StackPanel Margin="10">
        <TextBlock x:Name="PromptText" Margin="0,0,0,5"/>
        <TextBox x:Name="ResponseTextBox" MinWidth="200"/>
        <Button Content="OK" 
                Click="OKButton_Click" 
                Width="100"
                FontSize="20"
                HorizontalAlignment="Left"
                Margin="0,5,0,0"/>
    </StackPanel>
</Window>
